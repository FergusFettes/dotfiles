#!/usr/bin/env bash

function main_loop() {
    while true; do
        read -p "Developer> " line
        shell_execute "$line"
    done
}

function main() {
    shell_init
    main_loop
}

function shell_execute() {
    local line="$1"
    cd /p/openai
    response=$(poetry run /c/scripts/openai/api_wrapper.py -f /c/scripts/openai/assistant.qmd -i "$line")
    echo "Mr. Screwhead> $response"
}

function shell_init() {
    echo "Hallo, what can I do for you?"
}

main
